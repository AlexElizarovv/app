FROM nginx:1.14.0

RUN chown -R nginx:nginx /etc/nginx && \
    chown nginx:nginx /var/cache/nginx && \
    chown -R nginx:nginx /var/log/nginx && \
    mkdir /var/run/nginx && \
    chown nginx:nginx /var/run/nginx

ADD docker/base/base.conf /etc/nginx/base.conf
ADD docker/base/base.inc.template /etc/nginx/conf.d/base.inc.template
ADD docker/base/lang-path.conf /etc/nginx/conf.d/lang-path.conf
ADD docker/base/wikia.com.conf /etc/nginx/conf.d/wikia.com.conf
ADD docker/base/rewrites.conf /etc/nginx/conf.d/rewrites.conf
ADD docker/base/redirects.conf /etc/nginx/conf.d/redirects.conf
ADD docker/sandbox/site.conf /etc/nginx/conf.d/site.conf
ADD docker/prod/nginx.conf /etc/nginx/nginx.conf

# static mediawiki files
ADD apple-touch-icon.png /usr/wikia/slot1/current/src/apple-touch-icon.png

ADD skins /usr/wikia/slot1/current/src/skins
ADD resources /usr/wikia/slot1/current/src/resources
ADD extensions /usr/wikia/slot1/current/src/extensions

USER nginx

# validate configuration files for syntax errors
RUN nginx -c /etc/nginx/nginx.conf -t

RUN /bin/bash -c "envsubst < /etc/nginx/conf.d/base.inc.template > /etc/nginx/conf.d/base.inc '$FASTCGI_READ_TIMEOUT'

RUN /bin/bash -c "envsubst < /etc/nginx/conf.d/site.conf.template > /etc/nginx/conf.d/site.conf '$HOSTNAME_OVERRIDE'

{{#wds-dropdown isLevel2=true tagName='li' class=stickedClassName as |dropdown|}}
	{{#dropdown.toggle tagName='a' href='#' as |chevron|}}
		<span>
			{{#if model.label.key}}
				{{i18n model.label.key ns='design-system'}}
			{{else}}
				{{model.label.value}}
			{{/if}}
		</span>
		{{chevron}}
	{{/dropdown.toggle}}
	{{#dropdown.content scrollable=false}}
		{{#wds-list linked=true}}
			{{#each model.submenu as |thirdLevelItem|}}
				<li><a href="{{thirdLevelItem.href}}">{{thirdLevelItem.label.value}}</a></li>
			{{/each}}
		{{/wds-list}}
	{{/dropdown.content}}
{{/wds-dropdown}}

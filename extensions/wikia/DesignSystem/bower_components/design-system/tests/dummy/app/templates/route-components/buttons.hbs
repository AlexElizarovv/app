		{{/wds-button}}
		{{#wds-button text=true disabled=true}}Text disabled{{/wds-button}}
	{{/component-demo}}
</section>

<section>
	<h2 id="sizes:square">Button sizes: square</h2>
	<p>For a fixed size square button use <code class="format-code">.wds-is-square</code> class. This button will be
		45px x 45px with content centered inside. This type of button is mostly used for icons, example: social icons.
	</p>
	{{#component-demo name='button-square'}}
		{{#wds-button square=true class='wds-is-facebook-color'}}{{wds-icon name='facebook'}}{{/wds-button}}
		{{#wds-button square=true class='wds-is-nk-color'}}{{wds-icon name='nk'}}{{/wds-button}}
	{{/component-demo}}
</section>


			{{/dropdown.toggle}}
			{{#dropdown.content}}
				{{#wds-list}}
					<li>List item 1</li>
					<li>List item 2</li>
					<li>List item 3</li>
					<li>List item 4</li>
					<li>List item 5</li>
					<li>List item 6</li>
					<li>List item 7</li>
					<li>List item 8</li>
					<li>List item 9</li>
					<li>List item 10</li>
				{{/wds-list}}
			{{/dropdown.content}}
		{{/wds-dropdown}}

		{{#wds-dropdown as |dropdown|}}
			{{#dropdown.toggle as |chevron|}}
				{{#wds-button}}
					{{wds-icon name='fandom-heart' size='small'}}
					<span>Dropdown</span>
					{{chevron}}
				{{/wds-button}}
			{{/dropdown.toggle}}
			{{#dropdown.content}}
				{{#wds-list}}
					<li>List item 1</li>
					<li>List item 2</li>
					<li>List item 3</li>
				{{/wds-list}}
			{{/dropdown.content}}
		{{/wds-dropdown}}

		{{#wds-dropdown as |dropdown|}}
			{{#dropdown.toggle as |chevron|}}
				{{#wds-button secondary=true}}<span>Dropdown</span>{{chevron}}{{/wds-button}}
			{{/dropdown.toggle}}
			{{#dropdown.content}}
				{{#wds-list}}
					<li>List item 1</li>
					<li>List item 2</li>
					<li>List item 3</li>
				{{/wds-list}}
			{{/dropdown.content}}
		{{/wds-dropdown}}
	{{/component-demo}}
</section>

<section>
	<h2 id="text">Text buttons</h2>
	<p>These buttons are denoted with <code class="format-code">.wds-is-text</code> class. They are the least obtrusive.
		Nevertheless, their paddings remain untouched, which provides the same clickable area.</p>
	{{#component-demo name='text-buttons'}}
		{{#wds-button text=true}}Text button{{/wds-button}}
		{{#wds-button text=true}}
			{{wds-icon name='fandom-heart' size='small'}}

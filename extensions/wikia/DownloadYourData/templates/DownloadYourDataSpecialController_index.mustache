{{#isLoggedIn}}
  {{{introText}}}
  <form method="POST" name="DownloadYourDataForm" id="DownloadYourDataForm" class="DownloadYourDataForm">
    {{#showUsernameField}}
      <input type="text" name="username" placeholder="{{usernamePlaceholder}}" />
    {{/showUsernameField}}
    {{{submitButton}}}
    <input type="hidden" name="token" value="{{editToken}}" />
  </form>
  {{#error}}
    <p class="error">{{{error}}}</p>
  {{/error}}
{{/isLoggedIn}}
{{^isLoggedIn}}
    {{{notLoggedInMessage}}}
{{/isLoggedIn}}

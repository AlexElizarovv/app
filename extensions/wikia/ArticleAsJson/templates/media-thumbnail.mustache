<figure class="article-media-thumbnail"{{#mediaAttrs}} data-component="article-media-thumbnail" data-attrs="{{mediaAttrs}}"{{/mediaAttrs}}>
	<a href="{{media.href}}">
		<img class="article-media-placeholder"
			src="data:image/svg+xml;charset=utf-8,%3Csvg xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg' viewBox%3D'0 0 {{media.width}} {{media.height}}'%2F%3E"
			alt="{{media.title}}"
			{{#media.width}} width="{{media.width}}"{{/media.width}}
			{{#media.height}} height="{{media.height}}"{{/media.height}}>
		<noscript>
			<img src="{{media.url}}" alt="{{media.title}}"{{#media.width}} width="{{media.width}}"{{/media.width}}{{#media.height}} height="{{media.height}}"{{/media.height}}>
		</noscript>
	</a>
	{{#media.caption}}<figcaption>{{{media.caption}}}</figcaption>{{/media.caption}}
</figure>

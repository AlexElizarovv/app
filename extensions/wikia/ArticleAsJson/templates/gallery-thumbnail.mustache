<figure class="article-media-thumbnail"{{#mediaAttrs}} data-component="article-media-thumbnail" data-attrs="{{mediaAttrs}}"{{/mediaAttrs}}>
	<a href="{{href}}">
		<img class="article-media-placeholder"
			src="data:image/svg+xml;charset=utf-8,%3Csvg xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg' viewBox%3D'0 0 {{width}} {{height}}'%2F%3E"
			alt="{{title}}"
			{{#width}} width="{{width}}"{{/,edia.width}}
			{{#height}} height="{{height}}"{{/height}}>{{^fromApi}}
		<noscript>
			<img src="{{url}}" alt="{{title}}"{{#width}} width="{{width}}"{{/width}}{{#height}} height="{{height}}"{{/height}}>
		</noscript>
{{/fromApi}}</a>
	{{#caption}}<figcaption>{{{caption}}}</figcaption>{{/caption}}
</figure>
